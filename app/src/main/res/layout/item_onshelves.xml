<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_127"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:background="@mipmap/payallbak"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:scaleType="fitXY"
         />



    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_10"
        android:text="1111"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/color_1f"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/retailprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_5"
        android:text="零售价 :¥16.8"
        android:textColor="@color/color_66"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/Singleweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retailprice"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_5"
        android:text=""
        android:textColor="@color/color_66"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/Specifications"
        android:layout_below="@+id/Singleweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/color_66"
        android:textSize="@dimen/sp_11"
        />

    <TextView
        android:id="@+id/Uppershelf"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/bg_2b7_border"
        android:text="下架"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_9"
        tools:ignore="RtlCompat" />


</RelativeLayout>