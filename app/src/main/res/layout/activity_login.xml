<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.LoginActivity">

    <include layout="@layout/common_basetwo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_2"
            android:src="@mipmap/loginuser" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_18"
            android:background="@null"
            android:inputType="number"
            android:hint="请输入账号"
            android:textColorHint="@color/color_99"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#D0D0D0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_2"
            android:src="@mipmap/loginpwd" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_weight="2"
            android:background="@null"
            android:password="true"
            android:hint="请输入密码"
            android:textColorHint="@color/color_99"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:visibility="gone"
            android:src="@mipmap/openeyes" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#D0D0D0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <CheckBox
            android:id="@+id/check_create"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@drawable/circle_check"
            android:button="@null"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/check_create"
            android:layout_alignBottom="@+id/check_create"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@+id/check_create"
            android:text="我已仔细阅读并同意"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_12"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/protocol"
            android:layout_alignBottom="@+id/protocol"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_toEndOf="@+id/protocol"
            android:text="服务及隐私条款"
            android:textColor="@color/color_67"
            android:textSize="@dimen/sp_12"
            tools:ignore="RtlCompat" />
    </RelativeLayout>

    <TextView
        android:id="@+id/login"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:text="登录"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/bg_5r_border" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新用户注册"
        android:textColor="@color/color_af"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_11"
        />
</LinearLayout>