<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_base" />

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@mipmap/search_team"
        android:drawableLeft="@mipmap/searchs"
        android:drawablePadding="@dimen/dp_8"
        android:hint="请输入关键词"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_10"
        android:singleLine="true"
        android:textColor="@color/color_1f"
        android:textColorHint="@color/color_af"
        android:textSize="@dimen/dp_12" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/sequencing_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@null"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabMaxWidth="0dp"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/color_1c"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/color_23" />

    <com.product.as.merchants.view.NoScrollViewPager
        android:id="@+id/meal_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>