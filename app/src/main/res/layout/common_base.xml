<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_25">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingRight="@dimen/dp_20"
            android:src="@mipmap/lefticon" />

        <TextView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:id="@+id/textback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:layout_marginLeft="@dimen/dp_30"
            android:textColor="@color/color_1f"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="12"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_1f"
            android:textSize="@dimen/dp_16" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_right2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_75"
            android:text=""
            android:textColor="@color/colorAccent"
           android:textSize="@dimen/sp_10" />
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_rightAndIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:drawableRight="@drawable/ic_launcher_background"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dp_9"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>