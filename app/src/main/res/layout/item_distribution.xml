<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginStart="@dimen/dp_25"
            android:id="@+id/purchase"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/bg_5red_border"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/groupno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:text="风早"
            android:textColor="@color/color_1f"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_25"
        android:id="@+id/lls"
        android:layout_below="@+id/llname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="风早"
            android:textColor="@color/color_2b"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/rec_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_5"
            android:text="159XXXXX597"
            android:textColor="@color/color_2b"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lls">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcydetailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_82"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/status"
            android:layout_width="@dimen/dp_62"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/bg_12blue_border"
            android:gravity="center"
            android:text="确认送达"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

    </RelativeLayout>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_2"
        android:text=""
        android:textSize="@dimen/sp_11"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_25"
        android:textSize="@dimen/sp_11"
        />

    <TextView
        android:id="@+id/copyaddress"
        android:layout_width="@dimen/dp_62"
        android:layout_height="@dimen/dp_20"
        android:text="复制地址"
        android:gravity="center"
        android:textColor="@color/color_1c"
        android:textSize="@dimen/sp_10"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_below="@+id/ll"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/bg_blue_border"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/distribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/area"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_10"
        android:text=""
        android:textSize="@dimen/sp_10" />


    <TextView
        android:id="@+id/code"
        android:layout_width="@dimen/dp_62"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_1f"
        android:textSize="@dimen/sp_10" />

</RelativeLayout>