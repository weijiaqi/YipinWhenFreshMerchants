<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_base" />


        <com.allen.library.SuperTextView
            android:id="@+id/updatepwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            stv:sDividerLineType="none"
            stv:sLeftIconMarginLeft="@dimen/dp_20"
            stv:sLeftTextColor="@color/color_color66"
            stv:sLeftTextSize="@dimen/sp_14"
            stv:sLeftTextString="修改密码"
            stv:sLeftViewMarginLeft="@dimen/dp_10"
            stv:sRightTextSize="@dimen/sp_12"
            stv:sRightTvDrawableLeft="@mipmap/rightarrow" />

        <com.allen.library.SuperTextView
            android:id="@+id/detection"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            stv:sDividerLineType="none"
            stv:sLeftIconMarginLeft="@dimen/dp_20"
            stv:sLeftTextColor="@color/color_color66"
            stv:sLeftTextSize="@dimen/sp_14"
            stv:sLeftTextString="检测新版"
            stv:sLeftViewMarginLeft="@dimen/dp_10"
            stv:sRightTextSize="@dimen/sp_12"
            stv:sRightTvDrawableLeft="@mipmap/rightarrow" />

        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:text="当前版本" />
    </LinearLayout>


    <TextView
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_50"
        android:background="@drawable/bg_15blue_border"
        android:gravity="center"
        android:text="退出当前账号"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>