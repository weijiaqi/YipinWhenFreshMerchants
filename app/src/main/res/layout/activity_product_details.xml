<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.ReleaseCommoditiesActivity">

    <include layout="@layout/common_base" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="标题"
                    android:textColor="@color/color_1f"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="例如：进口南非葡萄柚子【特惠10斤】"

                    android:textColorHint="#999999"
                    android:textSize="14sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="#CACACA" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42.5dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="商品描述"
                        android:textColor="@color/color_1f"
                        android:textSize="@dimen/sp_15" />

                    <EditText
                        android:id="@+id/detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_83"
                        android:layout_marginLeft="@dimen/dp_83"
                        android:background="@null"
                        android:hint="描述简介"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_10" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="#CACACA" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42.5dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="商品分类"
                        android:textColor="@color/color_1f"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/cata_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="@dimen/dp_83"
                        android:layout_marginLeft="@dimen/dp_83"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请选择商品类别"
                        android:textColor="@color/color_1f"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_10" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"

                        android:src="@mipmap/righticon"
                        tools:ignore="RtlCompat" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="#CACACA" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="#CACACA" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42.5dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="结算价"
                        android:textColor="@color/color_1f"
                        android:textSize="@dimen/sp_15" />

                    <EditText
                        android:id="@+id/Original_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_83"
                        android:layout_marginLeft="@dimen/dp_83"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="¥ 0.00"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_12" />



                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="#CACACA" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42.5dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="规格"
                        android:textColor="@color/color_1f"
                        android:textSize="@dimen/sp_15" />

                    <EditText
                        android:id="@+id/specs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_83"
                        android:layout_marginLeft="@dimen/dp_83"
                        android:background="@null"
                        android:hint="请填写具体规格(务必填写单位,列如:箱,件)"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_10" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="#CACACA" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42.5dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="产地"
                        android:textColor="@color/color_1f"
                        android:textSize="@dimen/sp_15" />

                    <EditText
                        android:id="@+id/PlaceOrigin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_83"
                        android:layout_marginLeft="@dimen/dp_83"

                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="输入产地"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_10" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="#CACACA" />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42.5dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="配送范围"
                        android:textColor="@color/color_1f"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/Distribution"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:text=">>>>"
                        android:layout_marginStart="@dimen/dp_83"
                        android:layout_marginLeft="@dimen/dp_83"
                        android:textColor="@color/color_1f"
                        android:textSize="@dimen/sp_10"
                        android:layout_alignParentEnd="true"
                        tools:ignore="RtlCompat" />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="#CACACA" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42.5dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="商品图"
                        android:textColor="@color/color_1f"
                        android:textSize="@dimen/sp_15" />
                </RelativeLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Commodityone"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:scaleType="fitXY"
                        android:src="@mipmap/doorface" />

                    <ImageView
                        android:id="@+id/Commoditytwo"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:scaleType="fitXY"
                        android:src="@mipmap/doorface" />

                    <ImageView
                        android:id="@+id/Commoditythree"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:scaleType="fitXY"
                        android:src="@mipmap/doorface" />

                    <ImageView
                        android:id="@+id/Commodityfour"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:scaleType="fitXY"
                        android:src="@mipmap/doorface" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42.5dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="商品详情图"
                        android:textColor="@color/color_1f"
                        android:textSize="@dimen/sp_15" />
                </RelativeLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Detailsone"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:scaleType="fitXY"
                        android:src="@mipmap/doorface" />

                    <ImageView
                        android:id="@+id/Detailstwo"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:scaleType="fitXY"
                        android:src="@mipmap/doorface" />

                    <ImageView
                        android:id="@+id/Detailsthree"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:scaleType="fitXY"
                        android:src="@mipmap/doorface" />

                    <ImageView
                        android:id="@+id/Detailsfour"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:scaleType="fitXY"
                        android:src="@mipmap/doorface" />


                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/Freshrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_30"
                android:src="@mipmap/freshrelease" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>